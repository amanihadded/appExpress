<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="./js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="./img/ali.png" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>product page</title>

    <link href="./css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="css/dark-light.css">

    <!-- Custom styles for this template -->
    <link href="./css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/myStyle.css" />
  </head>
  <body>
    <%- include('./components/dark-light.ejs') %>
 
    <main class="d-flex flex-nowrap">
      <%- include('./components/sidebar.ejs', { currentPage : "product" }) %>

      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100">
        <%- include('./components/navbar.ejs') %>
        <br><br>
        <a href="/product/add.html" class="btn btn-primary" style="margin-left: 20px;">Add Product</a>
        <% if (arr.length === 0) { %>
          <p class="text-center mt-5">Aucun product pour le moment.</p>
        <% } else { %>
          <table
            style="width: 99%"
            class="text-center mx-auto table mt-5 table-striped table-bordered"
          >
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nom </th>
                <th scope="col">Decription</th>
                <th scope="col">Price</th>
                <th scope="col">Dernière mise à jour</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% arr.forEach((element, index) => { %>
                <tr>
                  <th scope="row"><%= index+1 %></th>
                  <td><img src="<%= element.imageUrl %>" alt="<%= element.name %>" style="width: 50px; height: auto;" /> <%= element.name %></td>
                  <td><%= element.description %></td>
                  <td><%= element.price %></td>
                  <td><%= moment(element.updatedAt).fromNow(); %></td>
                  <td>
                    <a
                      data-bs-toggle="tooltip"
                      data-bs-title="Voir détails"
                      data-bs-placement="top"
                      class="btn btn-secondary btn-sm"
                      href="./view/<%= element._id %>"
                      ><i class="bi bi-eye"></i
                    ></a>
        
                    <a
                      data-bs-toggle="tooltip"
                      data-bs-title="Modifier l'utilisateur"
                      data-bs-placement="top"
                      class="btn btn-primary btn-sm"
                      href="/edit/<%= element._id %>"
                    >
                      <i class="bi bi-pencil"></i>
                    </a>
                    <form action="/deleteProduct/<%= element._id %>?_method=DELETE" method="post" style="display:inline">
                      <button
                      data-bs-toggle="tooltip"
                      data-bs-title="Supprimer l'utilisateur"
                      data-bs-placement="top"
                      class="btn btn-danger btn-sm"
                      type="submit"
                    >
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
        
      </section>
      
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
  </body>
</html>
